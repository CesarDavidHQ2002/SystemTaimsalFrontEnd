@{
    ViewData["Title"] = "Home Page";
}
@using SystemTaimsalFrontEnd.Views.Home.Components;

<div>
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="0" class="active"
                aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="1"
                aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide-to="2"
                aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/Img/Logo.png" class="d-block w-100 " alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Img/Logo.png" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/Img/Logo.png" class="d-block w-100" alt="...">
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions"
            data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions"
            data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>
</div>


<div style="background-color:#33313B;padding-top:3%;padding-bottom:3%;" class="text-white">
    
    <div class="px-4 clearfix" style="padding-top:3%;">
        <h3 class="text-center clearfix stext-decoration-none py-4 px-5">
            Somos una empresa líder en el área de metal mecánica Torno, fresadora con 20 años de experiencia en
            el ramo de la industria
        </h3>
        <div class="row gx-5">
            <div class="text-center">
                <img src="~/ImgBlog/Img2.png" class="rounded img-fluid" alt="...">
            </div>
        </div>
        </div>
    </div>
</div>


<div style="padding-top:3%;padding-bottom:3%">
    <div class="text-center clearfix" style="padding-bottom:3%;">
        <h1 class="display-6"><i class="bi bi-wrench-adjustable-circle"></i> Trabajos Realizados</h1>
    </div>
    <div>
        <div class="carousel">
            <div class="carousel__contenedor">
                <button aria-label="Anterior" class="carousel__anterior">
                    <i class="bi bi-chevron-compact-left"></i>
                </button>
                <div class="carousel__lista">
                    <component type="typeof(SystemTaimsalFrontEnd.Views.Home.Components.Cardcarrusel)"
                        render-mode="ServerPrerendered" />
                </div>
                <button aria-label="Siguiente" class="carousel__siguiente">
                    <i class="bi bi-chevron-right"></i>
                </button>
            </div>
            <div role="tablist" class="carousel__indicadores"></div>
        </div>
    </div>
</div>
<div class="py-5">
    <div class="text-center clearfix" style="padding-bottom:1%;">
        <h1 class="display-6"><i class="bi bi-truck"></i> Clientes y proveedores</h1>
    </div>
    <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
        <div class="container-fluid">
            <div class="carousel">
                <div class="carousel_contenedor">
                    <button aria-label="Anterior" class="carousel_anterior">
                        <i class="bi bi-chevron-compact-left"></i>
                    </button>
                    <div class="carousel_lista">
                        <component type="typeof(SystemTaimsalFrontEnd.Views.Home.Components.ClienteCarrusel)"
                            render-mode="ServerPrerendered" />
                    </div>
                    <button aria-label="Siguiente" class="carousel_siguiente">
                        <i class="bi bi-chevron-right"></i>
                    </button>
                </div>
                <div role="tablist" class="carousel_indicadores"></div>
            </div>
        </div>
    </div>
</div>


<div style="background-color:#33313B;" class="py-5  ">
    <div class="text-center clearfix text-white">
        <h1 class="display-6 text-white"><i class="bi bi-clock"></i> Horarios</h1>
        <div class="container px-4" style="padding-top:2%;">
            <div class="row gx-5">
                <div class="col">
                    <p class="fs-4">LUNES A VIERNES</p>
                    <p class="fs-5">08:30 AM - 05:00 PM</p>
                </div>
                <div class="col">
                    <p class="fs-4">SABADOS</p>
                    <p class="fs-5">08:30 AM - 12:00 AM</p>
                </div>
            </div>
        </div>
    </div>
</div>